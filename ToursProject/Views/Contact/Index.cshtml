
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="space bg-light">
    <div class="container">
        <form class="ajax-contact" action="Index" method="post">
            <div class="row justify-content-center text-center">
                <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6">
                    <div class="title-area">
                        <span class="sec-subtitle">Bize Ulaşın</span>
                        <h2 class="sec-title h1">Düşünce ve Önerileriniz</h2>
                        <p class="sec-text">
                            Düşünce ve önerileriniz bizim için değerli. Bizimle paylaşın
                        </p>
                        @if (ViewBag.ok != null)
                        {
                            <div id="alertMessage" class="alert alert-success" role="alert">
                                @ViewBag.ok
                            </div>
                        }
                        @if (ViewBag.err != null)
                        {
                            <div id="alertMessage" class="alert alert-success" role="alert">
                                @ViewBag.err
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 form-group">
                    <input type="text" placeholder="Ad" name="name" class="form-control" required />
                </div>
                <div class="col-md-6 form-group">
                    <input type="text" placeholder="Soyad" name="surname" class="form-control" required />
                </div>
                <div class="col-md-6 form-group">
                    <input type="email" placeholder="E-Posta" name="email" class="form-control" required />
                </div>
                <div class="col-md-6 form-group">
                    <input type="number" placeholder="Telefon Numarası" name="phoneNumber" class="form-control" required />
                </div>
                <div class="col-md-6 form-group">
                    <input type="text" placeholder="Konu" name="subject" class="form-control" required />
                </div>
                <div class="form-group col-12">
                    <textarea placeholder="Mesajınızı giriniz" name="message" class="form-control" required></textarea>
                </div>
                <div class="col-md-auto pt-lg-3">
                    <button class="vs-btn style4" type="submit">Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    // Mesajı 3 saniye sonra silmek için bir zamanlayıcı ayarla
    setTimeout(function () {
        var alertBox = document.getElementById("alertMessage");
        if (alertBox) {
            alertBox.style.transition = "opacity 0.5s ease-out"; // Görsel efekt için
            alertBox.style.opacity = "0"; // Görünürlüğü azalt
            setTimeout(function () {
                alertBox.remove(); // DOM'dan tamamen kaldır
            }, 500); // Efekt tamamlandıktan sonra kaldır
        }
    }, 3000); // 3 saniye bekle
</script>
