@using ToursProject.Models.ToursModel
@model List<ToursListViewModel>

<body>
    <!--==============================
      Hero Area Start
    ==============================-->
    @* //data-bg-src="download%20version/assets/img/banner/banner-bg-1.png" *@
    <section class="hero-layout background-image" style="background-image: url('/download%20version/assets/img/banner/banner-bg-1.png');">
        <div class="hero-mask">
            <div class="vs-carousel" id="hero-slider" data-slide-show="1" autoplay="false">
                <div class="hero-slide">
                    <div class="container">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-lg-7">
                                <div class="hero-content">
                                    <span class="hero-subtitle">Tatil Zamanı!</span>
                                    <h1 class="hero-title">Türkiye'nin Güzelliklerini Keşfedin</h1>
                                    <p class="hero-text">
                                        Türkiye'nin eşsiz güzelliklerini keşfedin! Tarih ve doğanın iç içe geçtiği bu muhteşem ülkede,
                                        etkileyici antik kalıntılardan nefes kesen manzaralara, canlı kültürel mirastan lezzet dolu mutfak 
                                        sırlarına kadar her adımda yeni keşifler sizi bekliyor
                                    </p>
                                    <a href="about.html" class="vs-btn style4">Daha Fazla</a>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="hero-img">
                                    <img class="img1" src="/download version/assets/img/banner/turkey1.jpg" alt="hero">
                                    <img class="img2" src="/download version/assets/img/banner/turkey2.jpg" alt="hero">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hero-slide">
                    <div class="container">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-lg-7">
                                <div class="hero-content">
                                    <span class="hero-subtitle">Tatil Zamanı!</span>
                                    <h1 class="hero-title">Hayalinizdeki Tatili Yaşayın</h1>
                                    <p class="hero-text">
                                        O hayalini kurduğunuz mükemmel tatili gerçeğe dönüştürmenin zamanı geldi!
                                        Tüm güzellikleriyle hayalinizdeki tatil sizi bekliyor.
                                    </p>
                                    <a href="about.html" class="vs-btn style4">Daha Fazla</a>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="hero-img">
                                    <img class="img1" src="/download version/assets/img/banner/vacation3.jpg" alt="hero">
                                    <img class="img2" src="/download version/assets/img/banner/vacation2.jpg" alt="hero">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="slide-count vs-slider-tab" data-asnavfor="#hero-slider">
                <button class="tab-btn active">1</button>
                <button class="tab-btn">2</button>
            </div>

            <div class="hero-bottom">
                <div class="container">
                    <form class="hero-form">
                        <div class="row">
                            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                <div class="form-group ">
                                    <i class="fas fa-compass"></i>
                                    <input type="text" placeholder="Nereye?" />
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <i class="fas fa-calendar-alt"></i>
                                    <select class="form-select" name="name">
                                        <option value="" selected="selected" disabled="disabled" hidden="">Tarih Seçin</option>
                                        <option value="">January</option>
                                        <option value="">February</option>
                                        <option value="">March</option>
                                        <option value="">April</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <i class="fas fa-thumbtack"></i>
                                    <select class="form-select" name="name">
                                        <option value="" selected="selected" disabled="disabled" hidden="">Tür Seçin</option>
                                        <option value="">Adventure </option>
                                        <option value="">Combining</option>
                                        <option value="">Sporting</option>
                                        <option value="">Domestic</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                <button class="vs-btn style4">Şimdi Bul</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- ============================
        Hero Area End
      ==============================-->
    
    <!--==============================
        Tour Package Area Start
      ==============================-->
    <section class="space bg-light shape-mockup-wrap" data-bg-src="/download version/assets/img/shape/Bg.png">
        <div class="shape-mockup d-none d-xl-block jump z-index-negative" data-bottom="20%" data-left="5%">
            <img src="/download version/assets/img/shape/Dot.png" alt="Dots">
        </div>
        <div class="shape-mockup d-none d-xl-block spin z-index-negative" data-bottom="-5%" data-right="-5%">
            <img src="/download version/assets/img/shape/circle1.png" alt="Circle">
        </div>
        <div class="shape-mockup d-none d-xl-block ripple-animation z-index-negative" data-top="10%" data-left="10%">
            <img src="/download version/assets/img/shape/Ballon.png" alt="plane">
        </div>
        <div class="container ">
            <div class="row justify-content-center text-center">
                <div class="col-xl-6 col-lg-8 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="title-area">
                        <span class="sec-subtitle">Muhteşem Turlar</span>
                        <h2 class="sec-title h1">En İyi Tatil Paketleri</h2>
                        <p class="sec-text">
                            Hayalinizdeki tatili en iyi şekilde yaşamanız için özel olarak hazırlanmış tur paketlerimizi keşfedin.
                            En popüler destinasyonları ve keyif dolu aktiviteleri içeren bu tatil paketleriyle her anın tadını çıkarın.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row vs-carousel" data-slide-show="3" data-arrows="false" data-lg-slide-show="3" data-md-slide-show="2"
                 data-sm-slide-show="1">
                @foreach(var item in Model)
                {
                    <div class="col-xl-3 col-lg-6 col-sm-6">
                        <div class="package-style1">
                            <div class="package-img">
                                <a href="tour-booking.html">
                                    <img class="w-100" src="/download version/assets/img/tours/tour-1-1.jpg"
                                         alt="Package Image">
                                </a>
                            </div>
                            <div class="package-content">
                                <h3 class="package-title"><a href="tour-booking.html">@item.Title</a></h3>
                                @foreach(var city in item.CityName)
                                {
                                    <p class="package-text" style="display: inline; margin-right: 10px;">@city</p>
                                }
                                <div class="package-meta">
                                    <a href="#"><i class="fas fa-calendar-alt"></i> Süre: @item.TourTimeDayNight</a>
                                </div>
                                <div class="package-footer">
                                    <span class="package-price">@item.Price ₺</span>
                                    <a href="/TourDetailsPage/Index/@item.Id" class="vs-btn style4">Detaylar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 col-sm-6">
                        <div class="package-style1">
                            <div class="package-img">
                                <a href="tour-booking.html">
                                    <img class="w-100" src="/download version/assets/img/tours/tour-1-1.jpg"
                                         alt="Package Image">
                                </a>
                            </div>
                            <div class="package-content">
                                <h3 class="package-title"><a href="tour-booking.html">@item.Title</a></h3>
                                @foreach (var city in item.CityName)
                                {
                                    <p class="package-text" style="display: inline; margin-right: 10px;">@city</p>
                                }
                                <div class="package-meta">
                                    <a href="#"><i class="fas fa-calendar-alt"></i> Süre: @item.TourTimeDayNight</a>
                                </div>
                                <div class="package-footer">
                                    <span class="package-price">@item.Price ₺</span>
                                    <a href="/TourDetailsPage/Index/@item.Id" class="vs-btn style4">Detaylar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center pt-lg-2">
                <a href="tours.html" class="vs-btn">Daha Fazla</a>
            </div>
        </div>
    </section>
    <!--==============================
        Tour Package Area End
      ==============================-->
  
    <!--==============================
        Features Area Start
      ==============================-->
    <section class="space-extra-bottom">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-xl-6">
                    <div class="img-box5">
                        <div class="img-box__img1">
                            <img class="img1" src="/download version/assets/img/about/about-5-1.jpg" alt="about image">
                            <img class="img2" src="/download version/assets/img/about/about-5-2.jpg" alt="about image">
                        </div>
                        <div class="features-content">
                            <h3 class="features-title">Özel Aktiviteler</h3>
                            <p class="features-text">
                                Tatilinizi unutulmaz kılacak özel etkinlikler ve benzersiz deneyimlerle dolu bir program sizi bekliyor.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 col-sm-6 col-12">
                    <div class="features-style1">
                        <div class="features-bg" data-bg-src="/download version/assets/img/shape/features.png"></div>
                        <div class="features-image">
                            <img src="/download version/assets/img/features/features-1-2.png" alt="image">
                        </div>
                        <div class="features-content">
                            <h3 class="features-title">Rehberlik Hizmeti</h3>
                            <p class="features-text">
                                Gezi planlamanızda size rehberlik edecek detaylı yönergelerle en iyi deneyimi yaşayın.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 col-sm-6 col-12">
                    <div class="features-style1">
                        <div class="features-bg" data-bg-src="/download version/assets/img/shape/features.png"></div>
                        <div class="features-image">
                            <img src="/download version/assets/img/features/features-1-3.png" alt="image">
                        </div>
                        <div class="features-content">
                            <h3 class="features-title">Seyahat Düzenlemesi </h3>
                            <p class="features-text">
                                Ulaşım ve konaklama ihtiyaçlarınız için en ideal seyahat düzenlemeleri bizden.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 col-sm-6 col-12">
                    <div class="features-style1">
                        <div class="features-bg" data-bg-src="/download version/assets/img/shape/features.png"></div>
                        <div class="features-image">
                            <img src="/download version/assets/img/features/features-1-4.png" alt="image">
                        </div>
                        <div class="features-content">
                            <h3 class="features-title">Konum Yönetimi</h3>
                            <p class="features-text">
                                Hedefinizi kolayca bulmanız ve keşfetmeniz için profesyonel yer yönlendirme hizmeti sunuyoruz.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--==============================
        Features Area End
      ==============================-->




    <!--==============================
      Cart Side bar
    ============================== -->
    <div class="sideCart-wrapper offcanvas-wrapper d-none d-lg-block">
        <div class="sidemenu-content">
            <button class="closeButton border-theme bg-theme-hover sideMenuCls"><i class="far fa-times"></i></button>
            <div class="widget widget_shopping_cart">
                <h3 class="widget_title">Sepetim</h3>
                <div class="widget_shopping_cart_content">
                    <ul class="cart_list">
                        <li class="mini_cart_item">
                            <a href="shop.html" class="remove"><i class="fal fa-trash-alt"></i></a> <a href="shop.html">
                                <img src="/download version/assets/img/products/p-1-1.png" alt="Cart Image" />Modern Cow Boy Hat
                            </a>
                            <span class="quantity">
                                1 × <span class="amount"><span>$</span>100.00</span>
                            </span>
                        </li>
                        <li class="mini_cart_item">
                            <a href="shop.html" class="remove"><i class="fal fa-trash-alt"></i></a> <a href="shop.html">
                                <img src="/download version/assets/img/products/p-1-2.png" alt="Cart Image" />Cat Eye Sunglasses
                            </a>
                            <span class="quantity">
                                1 × <span class="amount"><span>$</span>10.00</span>
                            </span>
                        </li>
                    </ul>
                    <div class="total">
                        <strong>Toplam:</strong> <span class="amount"><span>$</span>110.00</span>
                    </div>
                    <div class="buttons">
                        <a href="cart.html" class="vs-btn style4">Sepeti Görüntüle</a>
                        <a href="checkout.html" class="vs-btn style4">Ödeme</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--********************************
        Code Ends Here
      ******************************** -->
    <!-- Scroll To Top -->
    <a href="#" class="scrollToTop scroll-btn"><i class="far fa-arrow-up"></i></a>

    <!--==============================
      Blogs Area End
    ==============================-->
</body>

